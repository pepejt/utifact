<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#C2FBED"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="377dp"
        android:layout_height="160dp"
        android:gravity="center_horizontal"
        android:background="#E5FAFAFA"
      android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select" />

        <Button
            android:id="@+id/button"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/orange"
            android:textColor="@color/black"
            android:onClick="onIngresoClick"
            android:text="Seleccione cliente" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="1890001323001" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cope" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="validaconta@oscus.coop" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:text="@string/tungu" />


    </LinearLayout>
</LinearLayout>