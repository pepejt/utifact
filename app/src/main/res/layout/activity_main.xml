<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity = "top"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        app:titleTextColor="@color/black"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardLogin"
        app:cardCornerRadius="24dp"
        android:layout_marginHorizontal="36dip"
        android:layout_marginTop="@dimen/activity_padding"
        android:layout_marginBottom="12dip"
        app:cardElevation="0dp"
        app:contentPadding ="24dp"
        android:clickable="true"
        android:backgroundTint="@color/ci_light_orange"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="3">

            <LinearLayout
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘‹Identifiquese!!"
                    android:textSize="@dimen/activity_padding"
                    android:textColor="@color/white"
                    android:textAlignment="textStart"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Por favor inicie\nsesiÃ³n para continuar"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textFontWeight="1000" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onClickInicio"
                    android:layout_marginTop="@dimen/activity_padding"
                    android:backgroundTint="@color/ci_light_purple"
                    android:text="Iniciar sesiÃ³n" />
            </LinearLayout>

            <ImageView
                app:layout_columnWeight="1"
                app:layout_rowWeight="0"
                android:layout_width="92px"
                android:layout_height="124dp"
                android:src="@drawable/logo"
                app:tint="@color/white" />

        </androidx.gridlayout.widget.GridLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardFacturar"
        app:cardCornerRadius="24dp"
        android:layout_marginHorizontal="36dip"
        android:layout_marginTop="@dimen/activity_padding"
        android:layout_marginBottom="12dip"
        app:cardElevation="0dp"
        app:contentPadding ="24dp"
        android:clickable="true"
        android:backgroundTint="@color/ci_light_purple"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="3">

            <LinearLayout
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hola!! ðŸ‘‹"
                    android:textSize="@dimen/activity_padding"
                    android:textColor="@color/white"
                    android:textAlignment="textStart"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Que tenemos\n planificado para hoy?"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textFontWeight="1000" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onClickFacturar"
                    android:layout_marginTop="@dimen/activity_padding"
                    android:backgroundTint="@color/ci_light_orange"
                    android:text="Facturar" />
            </LinearLayout>

            <ImageView
                app:layout_columnWeight="1"
                app:layout_rowWeight="0"
                android:layout_width="92px"
                android:layout_height="124dp"
                android:src="@drawable/logo"
                app:tint="@color/white" />

        </androidx.gridlayout.widget.GridLayout>
    </androidx.cardview.widget.CardView>


    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_padding"
        app:columnCount="2"
        app:useDefaultMargins="true">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="24dp"
            android:layout_margin="12dip"
            app:cardElevation="0dp"
            app:contentPadding="24dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="0"
            android:onClick="onClickProducto"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_padding"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/round_outline"
                    android:backgroundTint="@color/cb_light_green"
                    android:src="@drawable/ic_workspaces"
                    app:tint="@color/ci_light_green"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_padding"
                    android:text="Productos"
                    android:textAlignment="center"
                    android:textFontWeight="1000"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="24dp"
            android:layout_margin="12dip"
            app:cardElevation="0dp"
            app:contentPadding="24dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="0"
            android:onClick="onClickCliente"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_padding"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/round_outline"
                    android:backgroundTint="@color/cb_light_blue"
                    android:src="@drawable/ic_client"
                    app:tint="@color/ci_light_blue"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_padding"
                    android:text="Clientes"
                    android:textAlignment="center"
                    android:textFontWeight="1000"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="24dp"
            android:layout_margin="12dip"
            app:cardElevation="0dp"
            app:contentPadding="24dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="0"
            android:clickable="true"
            android:outlineAmbientShadowColor="@color/cb_light_green"
            android:onClick="onClickVentas"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_padding"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/round_outline"
                    android:backgroundTint="@color/cb_light_purple"
                    android:src="@drawable/ic_description"
                    app:tint="@color/ci_light_purple"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_padding"
                    android:text="Resumen Ventas"
                    android:textAlignment="center"
                    android:textFontWeight="1000"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="24dp"
            android:layout_margin="12dip"
            app:cardElevation="0dp"
            app:contentPadding="24dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="0"
            android:onClick="onClickFacturar"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_padding"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/round_outline"
                    android:backgroundTint="@color/cb_light_orange"
                    android:src="@drawable/ic_bar_chart"
                    app:tint="@color/ci_light_orange"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_padding"
                    android:text="Reportes"
                    android:textAlignment="center"
                    android:textFontWeight="1000"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.gridlayout.widget.GridLayout>
</androidx.appcompat.widget.LinearLayoutCompat>